.userinfo {
  display: flex;
  justify-content: center;
  &__title {
    padding-top: 5px;
    font-weight: 600;
    font-size: 18px;
    color: rgba(255, 255, 255, 0.5);
    text-align: right;
  }

  &__name {
    font-weight: 800;
    font-size: 72px;
    line-height: 1;
    color: #FFF;
    flex-basis: 400px;
    padding-left: 35px;
  }

}