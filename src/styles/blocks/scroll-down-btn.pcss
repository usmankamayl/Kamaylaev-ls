.scroll-down-btn {
  display: flex;
  align-items: center;
  font-size: 18px;
  font-weight: 600;
  text-decoration: none;
  color: $text-color;
  background: none;
  &:after {
    content: "";
    display: block;
    background: svg-load('scroll1.svg', fill=$text-color, width=100%, height=100%) center center no-repeat;
    width: 14px;
    height: 14px;
    margin-left: 15px;
  }
}