.iconed-link {
  display: inline-flex;
  align-items: center;
  color: $links-color;
  text-decoration: none;
  font-weight: bold;
  font-size: 18px;
  &:before {
    content: "";
    display: block;
    width: 15px;
    height: 15px;
    background: svg-load('link.svg', fill=$links-color) center center no-repeat;
    margin-right: 20px;
  }
  
  &:hover {
    box-shadow: 0 5px 5px rgba($links-color, 0.75);
  }
}